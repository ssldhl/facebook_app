<div class="container">
  <div class="row">
    <div class="page-header">
      <h1>Search for facebook groups</h1>
      <div class="export_button"></div>
    </div>
    <%= form_tag search_path, id:'search-form', class:'form-horizontal', remote:true do %>
        <div class="form-group">
          <div class="col-sm-12">
            <%= text_field_tag :search_criteria, nil, name: 'search_criteria', class: 'form-control', placeholder:'Search' %>
          </div>
        </div>
    <% end %>
    <div class="ajax_indicator" style="text-align: center;display:none;"><%= image_tag 'ajax-loader.gif'%></div>
    <div class="error"></div>
    <div class="content"></div>
  </div>
</div>